<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Servlet definition for the configuration page -->
    <servlet>
        <servlet-name>servletConfig</servlet-name>
        <servlet-class>com.projects.web.websorting.ServletConfig</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletConfig</servlet-name>
        <url-pattern>/configurable</url-pattern>
    </servlet-mapping>

    <!-- Servlet definition for the starting page -->
    <servlet>
        <servlet-name>StartingServlet</servlet-name>
        <servlet-class>com.projects.web.websorting.StartingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartingServlet</servlet-name>
        <url-pattern>/start</url-pattern>
    </servlet-mapping>

    <!-- Servlet definition for handling sorting requests -->
    <servlet>
        <servlet-name>SortingServlet</servlet-name>
        <servlet-class>com.projects.web.websorting.SortingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SortingServlet</servlet-name>
        <url-pattern>/sort</url-pattern>
    </servlet-mapping>

</web-app>
